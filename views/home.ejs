<%- include('partials/header'); -%>

<h1>Home</h1>

<p><%= content %></p>

<!-- This for loops renders blog post(s) -->
<% posts.forEach(function(post) { %>
    <h1><%= post.title %></h1>
    <p><%= post.content.substring(0,100) + "..." %></p>
    <a href="/posts/<%=post.title%>">Read More</a>
<% }); %>

